#!/bin/bash

space(){
    # commands list, enter, leave, describe
    case "$1" in
        list)
            list-spaces
            ;;
        enter)
#            if ! "$2"; then
#                echo "Choose the space to enter from"
#                list-spaces
#            else
                enter-space $2
#            fi
            ;;
        leave)
            leave-space
            ;;
        describe)
            describe-space
            ;;
        *)
            echo "Choose one of list|enter|leave|describe"
            ;;
    esac
}

list-spaces(){
    spaces=$(ls ~/.spaces/scripts)
    if [ "$spaces" = "" ]; then
        echo "No spaces defined"
    else
        echo $spaces
    fi
}
list-spacedefs(){
    spaces=$(ls ~/.spaces/defs)
}

enter-space(){
    echo $1
}

leave-space(){
    true
}
describe-space(){
    true
}

